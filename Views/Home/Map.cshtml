<!DOCTYPE html>
<html>
<head>
    <title>Simple Map</title>
    <style>
        #map {
             height: 800px;
             width: 800px;
         }
         /* Optional: Makes the sample page fill the window. AIzaSyAjkk2hyAhBCtOsC3sxhUrGC5fnvZMRxsQ AIzaSyD8Nje4_5TA-TS_SlKwHv2Dfx9fx3UfPPA
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }*/
         </style>
</head>
<body>
    
    <div id="map"></div>
    <script>

        var map;
        function initMap() {
            var location = { lat: 38.627003, lng: -90.199402 };
            map = new google.maps.Map(document.getElementById('map'), {

                zoom: 8,
                center: location,
                mapTypeId: google.maps.MapTypeId.Satellite,
                zoomControl: true,
                //position of zoom control
                zoomControlOptions: {
                    position: google.maps.ControlPosition.Left_Bottom
                },
                streetViewControl: true,
                streetViewControlOptions: {
                    position: google.maps.ControlPosition.Left_Bottom
                },
                mapTypeControlOptions: {
                    position: google.maps.ControlPosition.RIGHT_CENTER
                },
            });
            var marker = new google.maps.Marker({
                position: location,
                map: map,
                draggable:true

            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjkk2hyAhBCtOsC3sxhUrGC5fnvZMRxsQ&callback=initMap">
    </script>
    
</body>

</html>
